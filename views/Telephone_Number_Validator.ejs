<a class="btn btn-primary" href="/telephone">Again?</a>


<script>
let str = String(prompt("Place your number to check: "));
	function telephoneCheck(str) {

	let reg = /^(1\s?)?(\(([0-9]{3})\)|(([0-9]{3})))[-\s]?[0-9]{3}[-\s]?[0-9]{4}$/gi

	return reg.test(str);

}

/*console.log(telephoneCheck("555)-555-5555"))*/
let answer = telephoneCheck(str);
console.log(answer)
console.log(answer===true)
if (answer){
	document.querySelector("h2").innerHTML = ("Yes, "+str+" is a correct telephone number");
} else {
	document.querySelector("h2").innerHTML = ("No, "+str+" it isn't a correct telephone number");
	document.querySelector("h2").style.color="red";
}
</script>
